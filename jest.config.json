{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testEnvironmentOptions": {
    "NODE_ENV": "test"
  },
  "maxWorkers": 1,
  "restoreMocks": true,
  "coveragePathIgnorePatterns": ["node_modules", "src/config", "src/app.ts", "tests"],
  "coverageReporters": ["text", "lcov", "clover", "html"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
